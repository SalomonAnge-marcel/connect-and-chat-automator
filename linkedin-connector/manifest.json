{
  "name": "LinkedIn Connector",
  "version": "2.0",
  "manifest_version": 3,
  "description": "Safely automates LinkedIn outreach using your existing session with built-in safety measures",
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Connector"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "cookies",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.html"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}